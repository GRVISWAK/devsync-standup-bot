# =====================================
# PRODUCTION ENVIRONMENT VARIABLES
# =====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=standup_bot
DB_USERNAME=root
DB_PASSWORD=change_me_in_production

# Server Configuration  
SERVER_PORT=8080

# Zoho Cliq Configuration
ZOHO_CLIQ_WEBHOOK_URL=
ZOHO_CLIQ_BOT_TOKEN=
ZOHO_CLIQ_BOT_NAME=StandupBot

# OpenAI Configuration (Optional - fallback works without it)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# GitHub API Configuration (Optional)
GITHUB_TOKEN=

# Jira API Configuration (Optional)
JIRA_API_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=

# Google Calendar Configuration (Optional)
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CREDENTIALS_PATH=credentials.json

# Standup Configuration
STANDUP_REMINDER_CRON=0 0 9 * * MON-FRI
STANDUP_REMINDER_ENABLED=true
STANDUP_TIMEZONE=UTC

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
JPA_SHOW_SQL=false
