# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/standup_bot
SPRING_DATASOURCE_USERNAME=standupuser
SPRING_DATASOURCE_PASSWORD=your_password_here

# Zoho Cliq Configuration
ZOHO_CLIQ_WEBHOOK_URL=https://cliq.zoho.com/api/v2/channelsbyname/YOUR_CHANNEL/message
ZOHO_CLIQ_BOT_TOKEN=your_bot_token_here
ZOHO_CLIQ_BOT_NAME=StandupBot

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# GitHub API Configuration (Optional)
GITHUB_API_URL=https://api.github.com
GITHUB_TOKEN=ghp_your_github_token_here

# Jira API Configuration (Optional)
JIRA_API_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token_here

# Google Calendar Configuration (Optional)
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CREDENTIALS_PATH=credentials.json

# Standup Configuration
STANDUP_REMINDER_ENABLED=true
STANDUP_REMINDER_CRON=0 0 9 * * MON-FRI
STANDUP_TIMEZONE=UTC
